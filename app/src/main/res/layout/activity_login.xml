<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="54dp"
        android:background="@drawable/et_roundbox"
        android:hint="ID"
        android:paddingStart="18dp"
        android:textColor="@color/black"
        android:textColorHint="#979797"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_main" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/et_roundbox"
        android:hint="Password"
        android:paddingStart="18dp"
        android:textColor="@color/black"
        android:textColorHint="#979797"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/et_id"
        app:layout_constraintStart_toStartOf="@id/et_id"
        app:layout_constraintTop_toBottomOf="@id/et_id" />

    <ImageView
        android:id="@+id/img_pwView"
        android:layout_width="27dp"
        android:layout_height="24dp"
        android:layout_marginEnd="17dp"
        android:src="@drawable/close"
        android:tag="0"
        app:layout_constraintBottom_toBottomOf="@id/et_pw"
        app:layout_constraintEnd_toEndOf="@id/et_pw"
        app:layout_constraintTop_toTopOf="@id/et_pw" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/btn_round"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pw" />

    <TextView
        android:id="@+id/tv_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:text="계정이 없으신가요?"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/btn_join"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_join"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="60dp"
        android:background="#00FF0000"
        android:text="회원가입"
        android:textSize="13sp"
        android:textColor="#8C8C8C"
        app:layout_constraintBottom_toBottomOf="@id/tv_join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_join"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintTop_toTopOf="@id/tv_join" />
</androidx.constraintlayout.widget.ConstraintLayout>