<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".UploadActivity">

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="23dp"
        android:text="게시글 업로드"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_main"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="23dp"
        android:scaleType="fitXY"
        android:src="@drawable/tree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_upload" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/et_roundbox"
        android:hint="제목을 입력해 주세요."
        android:paddingStart="13dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/img_main"
        app:layout_constraintStart_toStartOf="@id/img_main"
        app:layout_constraintTop_toBottomOf="@id/img_main" />

    <EditText
        android:id="@+id/et_location"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/et_roundbox"
        android:hint="장소를 입력해 주세요."
        android:paddingStart="13dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/img_main"
        app:layout_constraintStart_toStartOf="@id/img_main"
        app:layout_constraintTop_toBottomOf="@id/et_title" />

    <EditText
        android:id="@+id/et_post"
        android:layout_width="0dp"
        android:layout_height="145dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/et_roundbox"
        android:gravity="top"
        android:hint="내용을 입력해 주세요."
        android:paddingStart="13dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/img_main"
        app:layout_constraintStart_toStartOf="@id/img_main"
        app:layout_constraintTop_toBottomOf="@id/et_location" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_upload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginBottom="73dp"
        android:background="@drawable/btn_round"
        android:text="업로드"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>